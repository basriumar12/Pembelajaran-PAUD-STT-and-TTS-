<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/panelScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <TextView
                android:id="@+id/txtScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score : 200"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/itemLiveOne"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_hearth"/>
            <ImageView
                android:id="@+id/itemLiveTwo"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_hearth"/>
            <ImageView
                android:id="@+id/itemLiveThree"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_hearth"/>
            <ImageView
                android:id="@+id/itemLiveFour"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_hearth"/>
            <ImageView
                android:id="@+id/itemLiveFive"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_hearth"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/quizItem"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_below="@+id/panelScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizItem"
            android:layout_centerHorizontal="true"
            android:text="Sebutkan huruf, angka, atau warna \n dalam kotak diatas"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGuide"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/btnSpech"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/img_mic"
            android:layout_marginBottom="50dp"/>
    </RelativeLayout>

</LinearLayout>